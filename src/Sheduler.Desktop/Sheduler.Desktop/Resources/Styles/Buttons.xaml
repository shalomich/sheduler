<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!--Primary buttons-->
  <Style TargetType="Button" x:Key="PrimaryButton">
    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource BackgroundBrush}"/>
    <Setter Property="MinWidth" Value="80"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="Margin" Value="4,0"/>
  </Style>

  <!--Secondary buttons-->
  <Style TargetType="Button" x:Key="SecondaryButton">
    <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource BackgroundBrush}"/>
    <Setter Property="MinWidth" Value="80"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="Margin" Value="4,0"/>
  </Style>

  <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>

  <Style TargetType="Button" x:Key="DangerousButton" BasedOn="{StaticResource PrimaryButton}">
    <Setter Property="Background" Value="{StaticResource DangerousBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource DangerousBrush}"/>
  </Style>

</ResourceDictionary>
