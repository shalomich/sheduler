<Application x:Class="Sheduler.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml"
             Exit="Application_Exit">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Styles/Colors.xaml"/>
        <ResourceDictionary Source="/Resources/Styles/Inputs.xaml"/>
        <ResourceDictionary Source="/Resources/Styles/Text.xaml"/>
        <ResourceDictionary Source="/Resources/Styles/Panels.xaml"/>
        <ResourceDictionary Source="/Resources/Styles/DataGrids.xaml"/>
        <ResourceDictionary Source="/Resources/Styles/Buttons.xaml"/>
        <ResourceDictionary Source="/Resources/Styles/Dialogs.xaml"/>

        <ResourceDictionary Source="/Views/Common/Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
