<Page x:Class="Sheduler.Desktop.Views.Auth.Login.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:login="clr-namespace:Sheduler.MVVM.ViewModels.Auth.Login;assembly=Sheduler.MVVM"
      d:DataContext="{d:DesignInstance Type=login:LoginViewModel}"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="290">
            <TextBox
                Text="{Binding LoginModel.Email}"></TextBox>
            <TextBox
                Text="{Binding LoginModel.Password}"></TextBox>
            <Button
                Command="{Binding LoginUICommand}"
                Content="Log in"/>
        </StackPanel>
    </Grid>
</Page>
